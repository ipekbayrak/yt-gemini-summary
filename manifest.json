{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.1",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://www.youtube.com/*", "https://gemini.google.com/*"],
  "default_locale": "en",
  "options_page": "src/ui/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "src/background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/content/youtube.js"],
      "css": ["src/content/youtube.css"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["src/content/gemini.js"]
    }
  ]
}
